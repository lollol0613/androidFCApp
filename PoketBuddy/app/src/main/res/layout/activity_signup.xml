<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:background="#fff"
    android:theme="@android:style/Theme.NoTitleBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/header"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/homebtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00ffffff"
            android:scaleType="centerInside"
            android:src="@drawable/home"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="76dp"
        android:text="SIGN UP"
        android:textAlignment="center"
        android:textSize="30sp"
        android:id="@+id/signuptxt"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signuptxt"
        android:paddingTop="30dp">

        <EditText
            android:id="@+id/InputName"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="@layout/txtedit_border"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:hint="Full Name"
            android:textColorHint="#aaa"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/InputEmail"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/InputName"
            android:background="@layout/txtedit_border"
            android:inputType="textEmailAddress"
            android:paddingStart="20dp"
            android:hint="Email"
            android:textColorHint="#aaa"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/InputContact"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/InputEmail"
            android:background="@layout/txtedit_border"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:hint="Contact No."
            android:textColorHint="#aaa"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/InputId"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/InputContact"
            android:background="@layout/txtedit_border"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:hint="ID"
            android:textColorHint="#aaa"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/InputPw"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/InputId"
            android:background="@layout/txtedit_border"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="#fff"
            android:textColorHint="#aaa"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/signupbtn"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/InputPw"
            android:background="@layout/txtedit_border"
            android:text="SIGN UP"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/cancelbtn"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/signupbtn"
            android:background="@layout/cancelbtn_border"
            android:text="CANCEL"
            android:textAlignment="center"
            android:textColor="#ff0000"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>